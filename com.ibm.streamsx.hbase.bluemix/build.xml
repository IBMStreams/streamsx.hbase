<project name="com.ibm.streamsx.hbase.bluemix" basedir="." default="all">

	<property environment="env" />
	<fail unless="env.STREAMS_INSTALL" message="STREAMS_INSTALL not set."/>
	<property name="streams.install" value="${env.STREAMS_INSTALL}" />

	<target name="clean">
		<echo message="cleaning the toolkit"/>

		 <exec executable="${streams.install}/bin/spl-make-toolkit">
	           <arg value="--clean"/>
	           <arg value="--directory"/>
	           <arg value="${basedir}"/>
		 </exec>
		</target>

	<target name="all">
		<echo message="compiling the hbase.bluemix toolkit."/>

	 <exec executable="${streams.install}/bin/spl-make-toolkit">
           <arg value="--directory"/>
           <arg value="${basedir}"/>
	 </exec>
	</target>



</project>

